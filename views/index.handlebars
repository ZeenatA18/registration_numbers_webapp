<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration</title>
    <link rel="stylesheet" href="/css/registration_number.css">
</head>

<body>
    <div class="container">

        <div class="box">

            <script>
                setTimeout(function () {
                    if(document.querySelector(".errorReset")) document.querySelector(".errorReset").innerHTML = "";
                    if(document.querySelector(".errorMsg")) document.querySelector(".errorMsg").innerHTML = "";
                }, 5000);
            </script>

            <h1>Registration Number</h1>

            {{#if messages.error}}<div class="errorMsg">{{messages.error}}</div>{{/if}}

            {{#if messages.reset}}<div class="errorReset">{{messages.reset}}</div>{{/if}}

            <form action="reg_numbers" method="post">

                <div class="enterReg">
                    <input size="30" type="text" name="regNo" class="regEntered" value=""
                        placeholder="Enter Registration Number">
                    <input class="addRegNumber" type="submit" value="Add">
                </div>
            </form>

            <form action="filter" method="post">

                <div class="examples">
                    <b> eg => CA 123 456 , CJ 123-456 , CY 123456
                </div>

                <div class="reg">
                    <input type="radio" class="radio" name="town" value="All"> Show all
                    <input type="radio" class="radio" name="town" value="CY"> Bellville
                    <input type="radio" class="radio" name="town" value="CJ"> Paarl
                    <input type="radio" class="radio" name="town" value="CA"> Cape Town
                </div>

                <div class="submitbtn">
                    <button type="submit" value="RESET" class="sapo">Submit</button>
                </div>

            </form>


            <div class="regNumbers">
                {{#each regList}}

                <li class="cy"> {{this.regno}}</li>

                {{/each}}
                {{#unless regList}}
                <h2 class="regs">No registration numbers ü§∑‚Äç‚ôÄÔ∏è</h2>
                {{/unless}}
            </div>


            <form action="/reset" method="get" class="reset">
                <button type="submit" value="RESET" class="set">RESET</button>
            </form>


        </div>
    </div>
</body>

</html>